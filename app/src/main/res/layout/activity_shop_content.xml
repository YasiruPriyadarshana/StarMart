<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shop_content">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="414dp"
        android:layout_height="725dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="414dp"
                android:layout_height="197dp"
                app:srcCompat="@mipmap/downloadshop_sh" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="301dp"
                android:layout_height="63dp"
                android:isIndicator="true" />

            <TextView
                android:id="@+id/topic_sh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Shop Details"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="TextView" />


            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Description" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Shop Items"
                android:textSize="18sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <View
                style="@style/Divider"
                android:layout_width="307dp"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />


            <FrameLayout
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="200dp">
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/userIcon"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="247dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="13dp"
                    android:text="Yasiru"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused"
                    android:textSize="20sp">

                </TextView>
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:padding="0dp"
                android:rating="2"
                android:scaleX=".4"
                android:scaleY=".4"
                android:stepSize="1" />


            <TextView
                android:id="@+id/desc"
                android:layout_width="421dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="I would only suggest that you provide social sharing icons for this article on this page. That way people can choose to curate this article, giving you higher backlinks, or, they can send it to their colleagues on their teams." />

            <Button
                android:id="@+id/reviewbt"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginStart="192dp"
                android:layout_marginBottom="150dp"
                android:background="@android:color/transparent"
                android:padding="0dp"
                android:text="See All reviews"
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>